    {{ form(form) }}
    {{ form_row(form.visiteurs) }}
    <a href="#" id="add_visiteur" class="btn btn-default">Ajouter un visiteur</a>
</div>#}
{% endblock %}

{% block js_enfant %}
    <script src="{{ asset('js/formVisiteur.js') }}"></script>
    <script src="{{ asset('js/calendrier.js') }}"></script>
{% endblock %}